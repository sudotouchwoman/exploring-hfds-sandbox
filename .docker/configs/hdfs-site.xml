<?xml version="1.0"?>
<configuration>
  <property>
    <name>dfs.replication</name>
    <value>1</value>
  </property>
  <property>
    <name>dfs.namenode.rpc-address</name>
    <value>namenode:8020</value>
  </property>
  <property>
    <name>dfs.webhdfs.enabled</name>
    <value>true</value>
  </property>
  <property>
    <name>dfs.client.socket-timeout</name>
    <value>60000</value>
  </property>
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:///tmp/hadoop-root/dfs/name</value>
  </property>
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>file:///tmp/hadoop-root/dfs/data</value>
  </property>
  <property>
    <name>dfs.namenode.http-address</name>
    <value>0.0.0.0:9870</value>
  </property>
  <!-- Safe mode configuration for single-node development setup -->
  <!-- Exit safe mode when at least 1 datanode has reported in -->
  <property>
    <name>dfs.namenode.safemode.min-datanodes</name>
    <value>1</value>
  </property>
  <!-- Lower threshold for single-node: exit when 0.1% of blocks are reported -->
  <property>
    <name>dfs.namenode.safemode.threshold-pct</name>
    <value>0.001f</value>
  </property>
</configuration>
